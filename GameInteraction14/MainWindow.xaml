<Window x:Class="GameInteraction14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameInteraction14"
        mc:Ignorable="d"
        Title="StartScreen" Height="450" Width="900" ResizeMode="NoResize">
    <Grid>
        <Canvas>
            <Button Width="600" Height="100" Canvas.Left="150" Canvas.Top="167" Click="StartGame" FontSize="60">Start Game</Button>

            <!--Knop naar de instructie pagina -->
            <Button x:Name="btnNavigate"
                    Content="Instructie Pagina"
                    Width="170"
                    Height="50"
                    Background="Yellow"
                    FontWeight="Bold"
                    Canvas.Left="16"
                    Canvas.Top="350"
                    FontSize="20"
                    Click="BtnInstructiePagina"/>
        </Canvas>
    </Grid>
</Window>
